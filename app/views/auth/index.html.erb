<div class="auth_page">
  <%= form_tag(auth_login_path, :method=>"post") do %>
    <table>
      <tbody>
        <tr>
          <td><%= label_tag(:login, "login:") %></td>
          <td><%= text_field_tag(:login) %></td>
        </tr>
        <tr>
          <td><%= label_tag(:password, "password:") %></td>
          <td><%= password_field_tag(:password) %></td>
        </tr>
        <tr>
          <td></td><td><%= submit_tag("Login") %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>