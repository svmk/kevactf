<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :realname %><br />
    <%= f.text_area :realname %>
  </div>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname %>
  </div>
  <div class="field">
    <%= f.label :university %><br />
    <%= f.text_area :university %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_area :password %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_area :price %>
  </div>
  <div class="field">
    <%= f.label :enabled %><br />
    <select name="user[enabled]" id="enabled"><option value="0" <%= raw (not @user.enabled) ? 'selected="selected"' : '' %>>Disabled</option><option value="1" <%= raw @user.enabled ? 'selected="selected"' : '' %>>Enabled</option></select>
  </div>
  <div class="field">
    <%= f.label :admin %><br />
    <select name="user[admin]" id="admin"><option value="0" <%= raw (not @user.enabled) ? 'selected="selected"' : '' %>>Disabled</option><option value="1" <%= raw @user.enabled ? 'selected="selected"' : '' %>>Enabled</option></select>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
