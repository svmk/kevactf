<h1 class="main_title">Registration</h1>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="register_border">
  <%= form_tag((url_for :action=>'do_register'),:method=>'post') do %>
    <table>
      <tbody>
        <tr>
          <td>Real name</td>
          <td><%= text_field_tag :realname,@user.realname %></td>
        </tr>
        <tr>
          <td>Nickname</td>
          <td><%= text_field_tag :nickname,@user.nickname%></td>
        </tr>
        <tr>
          <td>University</td>
          <td><%= text_field_tag :university,@user.university%></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= text_field_tag :email,@user.email%></td>
        </tr>
        <tr>
          <td></td>
          <td><%= submit_tag "Register" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>